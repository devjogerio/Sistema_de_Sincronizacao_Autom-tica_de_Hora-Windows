# Configurações do Servidor
HOST=localhost
PORT=8000
DEBUG=true
LOG_LEVEL=INFO

# Configurações do Banco de Dados
DATABASE_URL=sqlite+aiosqlite:///./data/ntp_monitor.db
DATABASE_ECHO=false

# Configurações de Segurança
SECRET_KEY=your-secret-key-here-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# Configurações de Email (opcional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=your-email@gmail.com
EMAIL_FROM_NAME=NTP Monitor

# Configurações de Monitoramento
AUTO_MONITORING_ENABLED=true
MONITORING_INTERVAL=300
MAX_CONCURRENT_CHECKS=10
REQUEST_TIMEOUT=10

# Configurações de Alertas
ALERT_EMAIL_ENABLED=false
ALERT_THRESHOLD_OFFSET=100
ALERT_THRESHOLD_DELAY=1000
ALERT_THRESHOLD_JITTER=50

# Configurações de Relatórios
REPORTS_DIR=./exports
REPORT_RETENTION_DAYS=30

# Configurações de Cache (Redis - opcional)
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# Configurações de Desenvolvimento
RELOAD=true
WORKERS=1

# Configurações de CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
CORS_CREDENTIALS=true
CORS_METHODS=["GET", "POST", "PUT", "DELETE"]
CORS_HEADERS=["*"]

# Configurações do servidor NTP (legado)
NTP_SERVER=pool.ntp.org
NTP_TIMEOUT=10
SYNC_INTERVAL_MINUTES=60
TIME_TOLERANCE_SECONDS=5

# Configurações do serviço (legado)
SERVICE_NAME=WindowsTimeSyncService
SERVICE_DISPLAY_NAME=Windows Time Synchronization Service
SERVICE_DESCRIPTION=Serviço para sincronização automática de data e hora do Windows

# Configurações de logging (legado)
LOG_FILE_PATH=logs/time_sync.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5